<% include ../partials/header %>

    <header class="container">
        <div class="jumbotron text-center">
            <h1 class="display-4 d-none d-lg-block">YelpCamp Campgrounds</h1>
            <p class="lead d-lg-block d-none">Beautiful Campgrounds from everywhere</p>
            <hr class="my-4 d-lg-block d-none">
            <a class="btn btn-primary btn-large" href="/campgrounds/new">Add a New Campground!</a>
        </div>
      <hr>
    </header>
<form action="/campgrounds" method='GET' class="input-group w-50 mx-auto">
  <input type="text" class="form-control mx-auto" name='search' placeholder='Find Your Next Campground'>
  <span class="input-group-btn d-lg-block d-none"><button class="btn btn-primary">Search</button></span>
</form>

 <div id="campgroundIndex" class="container"> 
   <hr class="mb-4"> 
   <div class="row text-center d-flex flex-wrap"  >
       <% campgrounds.reverse().forEach(function(campground){ %>
        <div class="showcase col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card">
                <img src="<%= campground.image %>">
                <div class="card-body">
                  <h4><a class="btn btn-outline-primary btn-block" href= "/campgrounds/<%= campground._id %>"><%= campground.name %></a></h4>
            </div>
        </div>    
    </div>
   		<% }); %>
  </div>
</div>
        <div>
            <% if (pages > 1) { %>
                <ul class="pagination justify-content-center">
                    <% if (current == 1) { %>
                        <li class="page-item disabled"><a class="page-link">First</a></li>
                    <% } else { %>
                        <li class="page-item"><a class="page-link" href="/campgrounds/pages/1">First</a></li>
                    <% } %>
                    <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                    <% if (i !== 1) { %>
                        <li class="page-item disabled"><a class="page-link">...</a></li>
                    <% } %>
                    <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                        <% if (i == current) { %>
                            <li class="page-item active"><a class="page-link"><%= i %></a></li>
                        <% } else { %>
                            <li class="page-item"><a class="page-link" href="/campgrounds/pages/<%= i %>"><%= i %></a></li>
                        <% } %>
                        <% if (i == Number(current) + 4 && i < pages) { %>
                            <li class="page-item disabled"><a class="page-link">...</a></li>
                        <% } %>
                    <% } %>
                    <% if (current == pages) { %>
                        <li class="page-item disabled"><a class="page-link">Last</a></li>
                    <% } else { %>
                        <li class="page-item"><a class="page-link" href="/campgrounds/pages/<%= pages %>">Last</a></li>
                    <% } %>
                </ul>
            <% } %>
      </div>
    </div>
    
<footer class="bg-light py-3 mt-5">
<p class="text-bottom text-right my-1 mr-5">Copyright &copy; 2018 - Cahya Isra</p></footer>
  
   

