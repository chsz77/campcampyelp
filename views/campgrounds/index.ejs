<% include ../partials/header %>

    <header class="container">
        <div class="jumbotron text-center">
            <h1 class="display-4">YelpCamp Campgrounds</h1>
            <p class="lead">Beautiful Campgrounds from everywhere</p>
            <hr class="my-4">
            <a class="btn btn-primary btn-large" href="/campgrounds/new">Add a New Campground!</a>
        </div>  
    </header>
 <div id="campgroundIndex" class="container"> 
    <div class="row text-center mb-4 d-flex flex-wrap" >
       <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-6">
            <div class="card">
                <img class="img-fluid rounded" src="<%= campground.image %>">
                <div class="card-body">
                 	<h4><%= campground.name %></h4>
                  <hr>
                <p>
                  <a class="btn btn-primary" href= "/campgrounds/<%= campground._id %>">More Info</a>
              </p>
            </div>
        </div>    
   		<% }); %>
    </div>
  </div>
        <div>
            <% if (pages > 1) { %>
                <ul class="pagination justify-content-center">
                    <% if (current == 1) { %>
                        <li class="page-item disabled"><a class="page-link">First</a></li>
                    <% } else { %>
                        <li class="page-item"><a class="page-link" href="/campgrounds/pages/1">First</a></li>
                    <% } %>
                    <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                    <% if (i !== 1) { %>
                        <li class="page-item disabled"><a class="page-link">...</a></li>
                    <% } %>
                    <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                        <% if (i == current) { %>
                            <li class="page-item active"><a class="page-link"><%= i %></a></li>
                        <% } else { %>
                            <li class="page-item"><a class="page-link" href="/campgrounds/pages/<%= i %>"><%= i %></a></li>
                        <% } %>
                        <% if (i == Number(current) + 4 && i < pages) { %>
                            <li class="page-item disabled"><a class="page-link">...</a></li>
                        <% } %>
                    <% } %>
                    <% if (current == pages) { %>
                        <li class="page-item disabled"><a class="page-link">Last</a></li>
                    <% } else { %>
                        <li class="page-item"><a class="page-link" href="/campgrounds/pages/<%= pages %>">Last</a></li>
                    <% } %>
                </ul>
            <% } %>
      </div>
    </div>
    
   

<% include ../partials/footer %>