<% include ../partials/header %>
<div class="container">
    
    <header class="jumbotron">
        <div class="container">
            <h1 class="display-4">YelpCamp Campgrounds</h1>
            <p class="lead">Beautiful Campgrounds from everywhere</p>
            <hr class="my-4"
            <p><a class="btn btn-primary btn-large" href="/campgrounds/new">Add a New Campground!</a></p>
        </div>  
    </header>
   
    <div class="row text-center mb-4" style="display:flex; flex-wrap: wrap;">
       <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-6">
            <div class="card">
                <img class="img-fluid rounded" src="<%= campground.image %>">
                <div class="card-body">
                 	<h4><%= campground.name %></h4>
                </div> 
                <p>
                  <a class="btn btn-primary" href= "/campgrounds/<%= campground._id %>">More Info</a>
              </p>
            </div>
        </div>    
   		<% }); %>
    </div>    
</div>
    
   

<% include ../partials/footer %>