<% include ../partials/header %>

<div class="container">
    <div class="row">
      <div class="col">
        <div class="w-50 mx-auto">
          <h1 class="mb-4 text-center">Edit <%= campground.name %></h1>
            <form action= "/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input required class="form-control" type="text" name="campground[name]" placeholder="Name" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                     <input required class="form-control" type="text" name="campground[image]" placeholder="Image" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                     <input required class="form-control" type="number" name="campground[lat]" placeholder="Latitude" value="<%= campground.lat %>" step="0.01">
                </div>
                <div class="form-group">
                     <input required class="form-control" type="number" name="campground[lng]" placeholder="Longitude" value="<%= campground.lng %>" step="0.01">
                </div>
                <div class="form-group">
                     <input required class="form-control" type="number" name="campground[price]" placeholder="Price" min="0.0001" step="0.01" value="<%= campground.price %>">
                </div>
                <div class="form-group">
                  <textarea rows="7" class="form-control ckeditor"  name="campground[description]" placeholder="Description"><%- campground.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
      </div>
  </div>
</div>

<% include ../partials/footer %>