<% include ../partials/header %>

<div class="container">
    <div class="row">
      <div class="col">
        <div class="w-50 mx-auto mb-4">
        <h1 class="mb-4 text-center">Create a new Campground</h1>
        <form action="/campgrounds" method="POST">
          <div class="form-group">
                    <input required class="form-control" type="text" name="campground[name]" placeholder="Name">
                </div>
                <div class="form-group">
                     <input required class="form-control" type="number" name="campground[price]" placeholder="Price" min="0.01" step="0.01">
                </div>
                 <div class="form-group">
                     <input required class="form-control" type="text" name="campground[image]" placeholder="Image URL" >
                </div>
                <div class="form-group">
                     <input class="form-control" type="number" name="campground[lat]" placeholder="Latitude"  step="0.01">
                </div>
                <div class="form-group">
                     <input class="form-control" type="number" name="campground[lng]" placeholder="Longitude"  step="0.01">
                </div>
                <hr>
                <div class="form-group">
                  <textarea rows="5" class="form-control ckeditor" name="campground[description]" placeholder="Description"></textarea>
               </div>
               	<div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
    	</div>
      </div>
  </div>
	</div>

<% include ../partials/footer %>